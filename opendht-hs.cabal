cabal-version:   3.0
name:            opendht-hs
version:         0.1.0.0
synopsis:        Haskell bindings for OpenDHT
license:         GPL-3.0-or-later
license-file:    LICENSE
author:          Simon DÃ©saulniers
maintainer:      sim.desaulniers@gmail.com
category:        Network
build-type:      Simple
extra-doc-files: CHANGELOG.md

common warnings
    ghc-options: -Wall -Wcompat -Wincomplete-record-updates
                 -Wincomplete-uni-patterns -Wredundant-constraints

library
    import:             warnings
    exposed-modules:    OpenDHT
                        OpenDHT.DhtRunner
                        OpenDHT.Types
                        OpenDHT.InfoHash
                        OpenDHT.Blob
                        OpenDHT.Value
                        OpenDHT.PublicKey
    other-modules:      OpenDHT.Internal.DhtRunner
                        OpenDHT.Internal.InfoHash
                        OpenDHT.Internal.Blob
                        OpenDHT.Internal.Value
                        OpenDHT.Internal.PublicKey
    build-depends:      base       ^>= 4.17.2.1,
                        bytestring ^>= 0.11.5,
                        transformers,
                        containers,
                        mtl,
                        lens
    build-tool-depends: c2hs:c2hs
    pkgconfig-depends:  opendht-c
    hs-source-dirs:     src
    default-language:   Haskell2010

    c-sources:          src/OpenDHT/Internal/DhtRunner.c
                        src/OpenDHT/Internal/Value.c
                        src/OpenDHT/Blob.c
    include-dirs:       src/OpenDHT/Internal

test-suite opendht-hs-test
    import:             warnings
    default-language:   Haskell2010
    type:               exitcode-stdio-1.0
    hs-source-dirs:     test
    main-is:            Main.hs
    build-depends:      base,
                        bytestring,
                        mtl,
                        opendht-hs
    ghc-options:        -threaded

